<div class="col-lg-10 offset-md-1"><br><br><br><br><br><br>

  <h1>メニュー一覧</h1>
  <%= link_to '追加', new_admin_plan_path %><br>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>id</th>
        <th>オーダー</th>
        <th>価格</th>
        <th>ブロック数</th>
        <th>ポイント</th>
      </tr>
    </thead>
    <tbody>
      <% @plans.each do |plan| %>
      <tr>
        <td><%= link_to '修正', edit_admin_plan_path(plan.id) %></td>
        <td><%= plan.id %></td>
        <td><%= plan.order %></td>
        <td><%= plan.price %></td>
        <td><%= plan.time_block %></td>
        <td><%= plan.description %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>