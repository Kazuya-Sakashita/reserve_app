<div>
  <div class="col-lg-6 offset-md-1">
    <h1>予約フォーム</h1><br>

    <h5>
      <%= current_user.name %><br><br>

    </h5>
    <%= form_for(@reservation, url: reserves_create_path) do |f| %>
    <%# フォーム内容 %>
    <div class="form-group">
      <%= f.label :plan_id, "メニュー" %>
      <%= f.select :plan_id, [["カットコース", "1"], ["スピードコース", "2"], ["シルバーコー", "3"], ["パーマコース", "4"],
                              ["ヘアーカラーコース", "5"], ["シャンプーブローコース", "6"], ["レディースシェービング", "7"]], include_blank: "選択して下さい", class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :user_id, "会員番号(user_id)" %>
      <p class="form-control">会員番号(user_id): <%= current_user.id %></p>
    </div>
    <div class="form-group">
      <%= f.label :appointed_day, "施術日" %>
      <%= f.datetime_select :appointed_day, {discard_year: true, use_month_numbers: true, minute_step: 15}, class: 'input-min' %>
    </div>
    <div class="form-group">
      <%= f.label :memo, "ヘアスタイルへのご要望など" %>
      <%=f.text_area :memo, :placeholder => "パーマは緩めで横に流すような感じで等" , class:"form-control" %>
    </div>


    <%= f.submit "予約" , class:"btn btn-primary" %>
    <% end %>


    <div>



    </div>
  </div>