<div>
  <div class="col-lg-6 offset-md-1">
    <h1>予約フォーム</h1><br>

    <h5>
      <%= current_user.name %><br><br>

    </h5>
    <%= form_for(@reservation, url: reserves_create_path) do |f| %>
    <%# フォーム内容 %>
    <div class="form-group">
      <%= f.label :plan_id, "メニュー" %>
      <%=f.text_field :plan_id, :placeholder => "メニューを選択" , class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :user_id, "会員番号(user_id)" %>
      <p class="form-control">会員番号(user_id): <%= current_user.id %></p>
    </div>
    <div class="form-group">
      <%= f.label :appointed_day, "施術日" %>
      <%=f.text_field :appointed_day, :placeholder => "2020/10/25 15:00" , class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :memo, "ご要望など" %>
      <%=f.text_area :memo, :placeholder => "パーマは流す感じなど" , class:"form-control" %>
    </div>


    <%= f.submit "予約" , class:"btn btn-primary" %>
    <% end %>


    <div>



    </div>
  </div>