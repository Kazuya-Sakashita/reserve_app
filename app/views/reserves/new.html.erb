<div>
  <div class="col-lg-6 offset-md-1">
    <h1>予約フォーム</h1><br>

    <h5>
      <%= current_user.name %><br><br>

    </h5>
    <%= form_for(@reservation, url: reserves_create_path) do |f| %>
    <%# フォーム内容 %>
    <div class="form-group">
      <%= f.label :plan_id, "メニュー" %>
      <%= f.collection_select :plan_id,Plan.all, :id, :order %>
    </div>
    <div class="form-group">
      <%= f.label :user_id, "会員番号(user_id)" %>
      <p class="form-control">会員番号(user_id): <%= current_user.id %></p>
    </div>
    <div class="form-group">
      <%= f.label :reservation_date, "施術日" %>
      <%= f.datetime_select :reservation_date, {discard_year: true, use_month_numbers: true, minute_step: 15}, class: 'input-min' %>
    </div>



    <%= f.submit "予約" , class:"btn btn-primary" %>
    <% end %>


    <div>



    </div>
  </div>